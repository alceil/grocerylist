<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity"/>

    <EditText
    andriod:id="@+id/edittext_name"
    andriod:layout_width="match_parent"
    andriod:layout_height="wrap_content" />

    <TextView
    andriod:id="@+id/textview_amount"
    andriod:layout_width="wrap_parent"
    andriod:layout_height="wrap_content"
    andriod:layout_below="@+id/edittext_name"
    andriod:layout_centerHorizontal="true"/>



